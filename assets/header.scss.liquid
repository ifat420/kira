.nav {
    display: grid;
    grid-template-columns: 1fr 130px 1fr;
    padding: 2rem 0;
}

.nav-list {
    display: flex;
    align-items: center ;
}

.nav-list-lft {
    justify-content: flex-end;
}

.nav-list-item {
    margin: 0 2rem;
}

.logobox {
    width: 130px;
}

.logo-image {
    width: 100%;
}

.ml-0 {
    margin-left: 0;
}