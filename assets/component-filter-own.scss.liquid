.collection-content {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 5rem;
    padding-top: 5rem;
}

.collection-filter-btn {
    height: 42px;
    border: none;
    border-bottom: 1px solid #e4e4e4;
    margin: 0 0 10px;
    background: transparent;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: var(--font-montserrat);
    font-size: 14px;
    cursor: pointer;
}

.collection-filter-btn .icon-caret {
    width: 12px;
    height: 12px;
}

.facets__list {
    margin-left: 3rem;
}

.collection-filter-container {
    max-height: 0;
    opacity: 0;
    transition: all .4s ease-in-out;
    overflow: hidden;
}

.collection-filter-container-extend {
    max-height: 2000px;
    opacity: 1;
}

.coll-filter {
    max-height: 90vh;
    overflow: auto;
    padding-right: 2rem;
    position: sticky;
    top: 2.5rem;
}

.facets__list-item {
    margin-bottom: 1rem;
}

.facet-checkbox {
    font-family: var(--font-montserrat);
    font-size: 14px;
    position: relative;
    cursor: pointer;
}

.facet-checkbox-mark {
    position: absolute;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 1px solid var(--color-grey-dark-1);
    left: -20px;
    top: 50%;
    transform: translateY(-50%);
}

.facet-checkbox>input[type=checkbox]:checked~.facet-checkbox-mark {
    background: var(--color-secondary);
}

.facet-checkbox input {
    position: absolute;
    width: 1px;
    height: 1px;
    opacity: 0;
    right: 0;
    overflow: hidden;

}